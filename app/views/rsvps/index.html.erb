<p id="notice"><%= notice %></p>

<h1>Rsvps</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rsvps.each do |rsvp| %>
      <tr>
        <td><%= rsvp.f_name %></td>
        <td><%= rsvp.l_name %></td>
        <td><%= rsvp.email %></td>
		<td><%= link_to 'Event Information', event_rsvp_path(@event, rsvp) %></td>
        <td><%= link_to 'Edit RSVP', edit_event_rsvp_path(@event, rsvp) %></td>
        <td><%= link_to 'Remove', [@event, rsvp], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back to Events', events_path %>
